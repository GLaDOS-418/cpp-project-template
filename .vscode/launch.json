{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "(gdb) Attach",
      "type": "cppdbg",
      "request": "attach",
      "program": "${workspaceFolder}/build/project_name", // Modify the path to your built executable
      "MIMode": "gdb",
      "setupCommands": [
          {
              "description": "Enable pretty-printing for gdb",
              "text": "-enable-pretty-printing",
              "ignoreFailures": true
          },
          {
              "description": "Set Disassembly Flavor to Intel",
              "text": "-gdb-set disassembly-flavor intel",
              "ignoreFailures": true
          }
      ]
    },
    {
      "name": "C++ LLDB",
      "type": "lldb",
      "request": "launch",
      "program": "${workspaceFolder}/build/project_name", // Modify the path to your built executable
      "args": [], // Optional: Add command-line arguments here
      //"stopAtEntry": true,
      "cwd": "${workspaceFolder}",
      //"environment": [],
      // "externalConsole": false,
      // "MIMode": "lldb",
      // "miDebuggerPath": "/usr/bin/lldb-vscode",
